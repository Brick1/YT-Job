<Page x:Class="YoutubeDownloaderDesktop.Views.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YoutubeDownloaderDesktop.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">
    <Grid>
        <StackPanel>
            <StackPanel>
                <Label>API key</Label>
                <TextBox Text="{Binding ApiKey}"></TextBox>
            </StackPanel>
            <StackPanel>
                <Label>Video Folder Path</Label>
                <TextBox Text="{Binding VideoFolderPath}"></TextBox>
            </StackPanel>
            <StackPanel>
                <Label>Audio Folder Path</Label>
                <TextBox Template="{DynamicResource TextBoxTemplate}" Text="{Binding AudioFolderPath}"></TextBox>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
